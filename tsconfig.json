{
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "types": [
      "node"
    ],
    "lib": [
      "es6"
    ],
    "outDir": "dist",
    "declarationDir": "typings",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "listEmittedFiles": false,
    "resolveJsonModule": true,
    "declarationMap": true,
    "declaration": true
  }
}
