{
  "compileOnSave": false,
  "include": ["../src/**/*"],
  "exclude": ["../node_modules", "../test", "**/*.spec.ts"],
  "compilerOptions": {
    "types": ["node"],
    "lib": ["dom", "es5", "es6", "es2015.collection", "es2015.promise", "es2015.core"],
    "outDir": "../dist",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "listEmittedFiles": true
  }
}
